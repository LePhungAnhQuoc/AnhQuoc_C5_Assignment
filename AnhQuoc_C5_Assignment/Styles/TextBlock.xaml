<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AnhQuoc_C5_Assignment">
    <Style TargetType="TextBlock" x:Key="tblGeneral">
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style TargetType="TextBlock" x:Key="tblPlaceHolder" BasedOn="{StaticResource tblGeneral}">
        <Setter Property="IsHitTestVisible" Value="False" />

        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="Margin" Value="10 0 0 0" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style TargetType="TextBlock" x:Key="tblPlaceHolderComboBox" BasedOn="{StaticResource tblGeneral}">
        <Setter Property="IsHitTestVisible" Value="False" />

        <Setter Property="Margin" Value="10 0 0 0" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontWeight" Value="DemiBold" />
    </Style>

    <Style TargetType="TextBlock" x:Key="tblDisplayInfo" BasedOn="{StaticResource tblGeneral}">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>