    <Style TargetType="Button" x:Key="btnLogOut" BasedOn="{StaticResource btnGeneral}">
        <Setter Property="Content" Value="Add" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Width" Value="110" />
        <Setter Property="Height" Value="35" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border BorderThickness="1"
                            BorderBrush="{TemplateBinding Background}"
                            CornerRadius="10">
                        <Border BorderThickness="1"
                                BorderBrush="White"
                                CornerRadius="10">
                            <Border Name="Border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    BorderThickness="0">
                                <ContentPresenter TextBlock.Foreground="{TemplateBinding Foreground}"
                                                  TextBlock.FontWeight="{TemplateBinding FontWeight}"
                                                  TextBlock.FontSize="{TemplateBinding FontSize}"
                                                  Margin="{TemplateBinding Padding}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"></ContentPresenter>
                            </Border>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#2691d9" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#a8d3f0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
    
    <Style TargetType="Button" x:Key="btnPrint" BasedOn="{StaticResource btnGeneral}">
        <Setter Property="Content" Value="Print" />
        <Setter Property="Background" Value="#007bff"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style TargetType="Button" x:Key="btnExpandMore" BasedOn="{StaticResource btnGeneral}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Tag" Value="{StaticResource ellipsis}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}">
                        <Grid>
                            <Path Style="{StaticResource pathStyle1}"
                                  Width="20" Height="auto"
                                  VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                  Data="{TemplateBinding Tag}"
                                  Margin="10 0"
                                  Fill="Black"/>
                            <ContentPresenter />
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="AliceBlue" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#ffffff" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="btnUserInfo" BasedOn="{StaticResource btnGeneral}">
        <Setter Property="Width" Value="60" />
        <Setter Property="Height" Value="60" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Grid x:Name="borderEffectContainer">
                            <Border x:Name="firstBd"
                                    BorderBrush="Black"
                                    Background="Aqua"
                                    BorderThickness="0"
                                    CornerRadius="40">
                                <Border.Effect>
                                    <DropShadowEffect  BlurRadius="16" ShadowDepth="0" Color="Black" Opacity="1" RenderingBias="Quality" />
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <Ellipse x:Name="container"
                                 Width="{TemplateBinding Width}"
                                 Height="{TemplateBinding Height}">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Tag}" />
                            </Ellipse.Fill>
                        </Ellipse>
                        <ContentPresenter />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="borderEffectContainer" Property="Visibility" Value="Visible" />
                            <!--<Setter TargetName="container" Property="Fill" Value="Red" />-->
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="False">
                            <Setter TargetName="borderEffectContainer" Property="Visibility" Value="Hidden" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>